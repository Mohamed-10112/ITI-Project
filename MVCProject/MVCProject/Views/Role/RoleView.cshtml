@model MVCProject.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Add New Role";
}

<h2 class="text-center mb-4">Add New Role</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="AddRole" method="post">
            <div class="form-group mb-3">
                <label asp-for="RoleName" class="form-label"></label>
                <input asp-for="RoleName" class="form-control" placeholder="Enter role name (e.g. Admin, Student, Instructor)" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Add Role</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
