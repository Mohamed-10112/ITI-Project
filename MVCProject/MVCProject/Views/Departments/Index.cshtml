@model IEnumerable<MVCProject.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-5 p-4 rounded-4 bg-white">
    <h1 class="mb-4 text-center">Departments</h1>

    <div class="search-container mb-4">
        <input type="text"
               id="searchInput"
               class="form-control search-input"
               placeholder="Search by name or manager name..."
               aria-label="Search" />

        <button type="button" class="search-icon" aria-hidden="true" title="Search">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                 xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M21 21L16.65 16.65" stroke="#0a3d91" stroke-width="2"
                      stroke-linecap="round" stroke-linejoin="round" />
                <circle cx="11" cy="11" r="6" stroke="#0a3d91" stroke-width="2"
                        stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </button>
    </div>

    <div class="mb-3 text-center">
        <a asp-action="Create" class="btn btn-warning px-4 py-2 fw-semibold">Add Department</a>
    </div>

    <div class="table-responsive" id="departmentsTable">
        <table class="table table-striped align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.ManagerName)</th>
                    <th style="width: 240px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-col="name">@item.Name</td>
                        <td data-col="manager">@item.ManagerName</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn custom-details btn-sm me-2">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn custom-details2 btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f6f8fb;
    }

    h1 {
        font-weight: 700;
        background: linear-gradient(90deg, #001f3f, #0a3d91);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .search-container {
        position: relative;
        width: 100%;
        max-width: 680px;
        margin: 0 auto;
    }

    .search-input {
        width: 100%;
        padding: 12px 48px 12px 16px;
        border: 2px solid #0a3d91;
        border-radius: 50px;
        font-size: 16px;
        transition: all 0.18s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
    }

    .search-input:focus {
        outline: none;
        border-color: #001f3f;
        box-shadow: 0 6px 18px rgba(0, 31, 63, 0.12);
    }

    .search-icon {
        position: absolute;
        top: 50%;
        right: 14px;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn {
        transition: all 0.2s ease-in-out;
        border-radius: 8px !important;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.12);
    }

    .table {
        border-radius: 12px !important;
        overflow: hidden;
    }
    .table tbody tr {
        transition: none !important;
    }

    .table tbody tr:hover {
        background-color: inherit !important;
        transform: none !important;
    }

    @@media (max-width: 576px) {
        .search-container {
            max-width: 100%;
            padding: 0 8px;
        }
    }

    .container.mt-5 {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
        padding: 40px;
        margin-top: 40px !important;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const input = document.getElementById("searchInput");
        const iconBtn = document.querySelector(".search-icon");
        const table = document.querySelector("#departmentsTable table");
        const tbody = table.querySelector("tbody");
        const allRows = Array.from(tbody.querySelectorAll("tr"));

        if (iconBtn) {
            iconBtn.addEventListener("click", function () {
                input.focus();
            });
        }

        let timeoutId = null;
        input.addEventListener("input", function () {
            clearTimeout(timeoutId);
            timeoutId = setTimeout(() => {
                const q = input.value.trim().toLowerCase();

                if (!q) {
                    tbody.innerHTML = "";
                    allRows.forEach(r => tbody.appendChild(r));
                    return;
                }

                const filtered = allRows.filter(row => {
                    const name = (row.querySelector('[data-col="name"]')?.textContent || "").toLowerCase();
                    const manager = (row.querySelector('[data-col="manager"]')?.textContent || "").toLowerCase();
                    return name.includes(q) || manager.includes(q);
                });

                tbody.innerHTML = "";
                filtered.forEach(r => tbody.appendChild(r));
            }, 120);
        });
    });
</script>
