@model MVCProject.ViewModels.LoginUserViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    html, body {
        overflow: hidden;
        height: 100%;
    }

    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background: url('/images/Home/H5.png') no-repeat center center fixed;
        background-size: cover;
    }

    footer {
        display: none !important;
    }

    .login-background {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        min-height: 100vh;
    }

    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .login-card {
        background: #fff;
        border-radius: 20px;
        padding: 50px 100px;
        max-width: 950px;
        width: 100%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 2;
    }

    .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        background: none;
        border: none;
        font-size: 28px;
        color: #1a2332;
        cursor: pointer;
        line-height: 1;
    }

    .login-title {
        color: #001f3f;
        font-size: 34px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 25px;
        letter-spacing: 1px;
    }

    .form-group-custom {
        margin-bottom: 15px;
        position: relative;
    }

    .form-label-custom {
        color: black;
        font-size: 17px;
        margin-bottom: 8px;
        display: block;
    }

    .form-label-custom::before {
        content: "* ";
        color: black;
    }

    .form-control-custom {
        width: 100%;
        padding: 14px 0;
        background: transparent;
        border: none;
        border-bottom: 2px solid rgba(100, 100, 100, 0.5);
        color: black;
        font-size: 17px;
        transition: border-color 0.3s;
    }

    .form-control-custom:focus {
        outline: none;
        border-bottom-color: black;
    }

    .form-control-custom::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .password-wrapper {
        position: relative;
    }

    .checkbox-container {
        display: flex;
        align-items: flex-start;
        margin: 20px 0;
    }

    .checkbox-custom {
        width: 22px;
        height: 22px;
        margin-right: 12px;
        cursor: pointer;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .checkbox-label {
        color: #1a2332;
        font-size: 14px;
        line-height: 1.4;
        cursor: pointer;
    }

    .btn-submit {
        width: 100%;
        padding: 16px;
        background: #001f3f;
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 17px;
        font-weight: 700;
        letter-spacing: 2px;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        margin-top: 10px;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .signup-link {
        text-align: center;
        margin-top: 20px;
        color: black;
        font-size: 15px;
    }

    .signup-link a {
        color: #1a2332;
        text-decoration: none;
        font-weight: 600;
    }

    .signup-link a:hover {
        text-decoration: underline;
    }

    .text-danger {
        color: red !important;
        font-size: 13px;
        display: block;
        min-height: 1px;
        margin-top: 3px;
    }
</style>

<div class="login-background">
    <div class="login-container">
        <div class="login-card">
            <button type="button" class="close-btn" onclick="window.history.back()">&times;</button>

            <h2 class="login-title">· Login Form ·</h2>

            <form asp-action="SaveLogin" method="post">
                <div class="form-group-custom">
                    <label asp-for="Email" class="form-label-custom">Email address</label>
                    <input asp-for="Email" class="form-control-custom" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Password" class="form-label-custom">Password</label>
                    <div class="password-wrapper">
                        <input asp-for="Password" class="form-control-custom" type="password" id="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="checkbox-container">
                    <input type="checkbox" id="rememberMe" name="rememberMe" class="checkbox-custom" />
                    <label for="rememberMe" class="checkbox-label">Remember Me</label>
                </div>

                <button type="submit" class="btn-submit">LOGIN</button>

                <div class="signup-link">
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register">Sign up</a>
                </div>
            </form>

            @if (ViewBag.ErrorMessage != null)
            {
                <script>
                    window.onload = function () {
                        alert("@ViewBag.ErrorMessage");
                    };
                </script>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
