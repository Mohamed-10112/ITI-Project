@model MVCProject.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <h2 class="mb-4 style="color: #8B0000;">Delete Student</h2>

    <div class="card shadow p-4">
        <div class="d-flex align-items-center">
            <img src="~/images/students/@(string.IsNullOrEmpty(Model.Image) ? "default.jpg" : Model.Image)"
                 alt="@Model.Name"
                 width="120" height="120"
                 class="rounded-circle me-4"
                 style="object-fit: cover;" />
            <div>
                <h4>@Model.Name</h4>
                <p><strong>Address:</strong> @Model.Address</p>
                <p><strong>Grade:</strong> @Model.Grade</p>
                <p><strong>Department:</strong> @Model.Department?.Name</p>
            </div>
        </div>
    </div>

    <div class="alert alert-danger mt-4" role="alert">
        ⚠️ Are you sure you want to delete this student? This action cannot be undone.
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="text-start">
            <button type="submit" class="btn custom-details2 px-4 me-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        </div>
    </form>
</div>
