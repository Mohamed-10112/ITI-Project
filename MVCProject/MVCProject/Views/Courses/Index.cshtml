@model IEnumerable<MVCProject.Models.Course>

@{
    ViewData["Title"] = "Index";
}
<div style="margin-left:150px;">
    <h1>Courses</h1>
    <form asp-action="Index" method="get" class="mb-3">
        <input type="text" name="searchString"
               class="form-control d-inline"
               style="width: 863px;"
               placeholder="Search by name..."
               value="@Context.Request.Query["searchString"]" />

        <button type="submit" class="btn custom-details btn-sm mx-1">Search</button>
        <a asp-action="Index" class="btn btn-secondary btn-sm mx-1" style="width:57px;">Reset</a>
    </form>
    <p>
        <a asp-action="Create">Add Course</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Degree)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MinimumDegree)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimumDegree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn custom-details btn-sm mx-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn custom-details2 btn-sm mx-1">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>