@model MVCProject.Models.Course
@{
    ViewData["Title"] = "Create Course";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header custom-navbar text-white text-center py-3 rounded-top-4">
            <h3 class="mb-0">Add New Course</h3>
        </div>

        <div class="card-body p-4">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter course name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Degree" class="form-label fw-semibold"></label>
                        <input asp-for="Degree" class="form-control" placeholder="Enter degree" />
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MinimumDegree" class="form-label fw-semibold"></label>
                        <input asp-for="MinimumDegree" class="form-control" placeholder="Enter minimum degree" />
                        <span asp-validation-for="MinimumDegree" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Hours" class="form-label fw-semibold"></label>
                        <input asp-for="Hours" class="form-control" placeholder="Enter number of hours" />
                        <span asp-validation-for="Hours" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DeptId" class="form-label fw-semibold"></label>
                        <select asp-for="DeptId" class="form-select" asp-items="ViewBag.DeptId">
                            <option value="">-- Select Department --</option>
                        </select>
                        <span asp-validation-for="DeptId" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <input type="submit" value="Create" class="btn btn-success px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
